{
  "family": "fastapi-inventory",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::495599749778:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "fastapi-app",
      "image": "495599749778.dkr.ecr.eu-west-3.amazonaws.com/fastapi-inventory:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:your-secure-password@fastapi-db.crkqcsiy2t1q.eu-west-3.rds.amazonaws.com:5432/postgres"
        },
        {
          "name": "ENV",
          "value": "production"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fastapi-inventory",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}